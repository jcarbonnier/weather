{{page-title "Weather app"}}

<div id="application-offcanvas" class="offcanvas offcanvas-start">
  <Gui::Application::Sidenav />
</div>

<div id="application-sidenav">
  <Gui::Application::Sidenav />
</div>

<main class="h-100">

  <button id="application-offcanvas-btn" class="fixed-top m-1 btn btn-secondary" type="button"
    data-bs-toggle="offcanvas" data-bs-target="#application-offcanvas">
    <i class="bi bi-list"></i>
  </button>

  {{outlet}}
</main>

<div class="toast-container position-fixed top-0 end-0 p-3" id="toastPlacement">
  <div id="toaster" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong id="toasterTitle" class="me-auto">Bootstrap</strong>
      {{!-- <small>11 mins ago</small> --}}
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div id="toasterBody" class="toast-body text-white"></div>
  </div>
</div>
